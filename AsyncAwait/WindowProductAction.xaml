<Window x:Class="AsyncAwait.WindowProductAction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncAwait"
        mc:Ignorable="d"
        Title="WindowProductAction" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox x:Name="textBoxNameProduct" Text="Название" FontSize="20" BorderBrush="Blue" Foreground="Black" Width="300" Height="50" Margin="0 50 0 0"/>
            <TextBox x:Name="textBoxPriceProduct" Text="Цена" FontSize="20" BorderBrush="Blue" Foreground="Black" Width="300" Height="50" Margin="0 50 0 0"/>
            <TextBox x:Name="textBoxCountProduct" Text="Количество" FontSize="20" BorderBrush="Blue" Foreground="Black" Width="300" Height="50" Margin="0 50 0 0"/>
            <Button Content="Сохранить" FontSize="25" FontWeight="Bold" Background="Blue" Foreground="White" Width="250" Height="50" Margin="0 30 0 0" Click="ProductSaveChanges"/>
        </StackPanel>
    </Grid>
</Window>
